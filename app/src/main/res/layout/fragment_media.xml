<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="0dp"
    tools:ignore="MissingConstraints">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/SimpleExoPlayerView"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/stepVideoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5sp"
        android:paddingLeft="5sp"
        tools:text="Step description"
        android:textColor="@color/material_color_black"
        android:textSize="18sp"
        android:layout_below="@+id/SimpleExoPlayerView"
        android:layout_alignRight="@+id/SimpleExoPlayerView"
        android:layout_alignEnd="@+id/SimpleExoPlayerView" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonPrev"
        android:background="@drawable/arrow"/>

    <Button
        android:id="@+id/buttonPrev"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginRight="50sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/arrow1"/>

    <ImageView
        android:id="@+id/thumbImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepVideoDesc"
        android:layout_marginTop="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

</RelativeLayout>